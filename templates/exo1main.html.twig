{% extends 'exo1layout.html.twig' %}

{% block main %} 
<main class="main container">
    <nav class="breadcrumb hide-md">
        <ul>
            <!-- à finir pour que ce soit interactif -->
            <li><a href="#"><i class="icon-shop"></i>Accueil</a></li>
            <li><a href="#"><i class="icon-data"></i><?= htmlspecialchars($displayed['boutique']) ?></a></li>
